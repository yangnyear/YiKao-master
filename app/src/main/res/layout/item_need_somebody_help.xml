<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_needs_somebody_logo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="4dp"
                app:placeholderImage="@drawable/ic_abc_image_english"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tt_needs_somebody_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:gravity="start|center_vertical"
                android:text="昨天14.00"
                android:textColor="#848484"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tt_needs_somebody_infor"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="我是计科院信息管理专业某某某"
            android:textColor="#2b2a2a"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="学科:"
                android:textColor="#2b2a2a"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tt_needs_somebody_course"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="高数(下):"
                android:textColor="#2b2a2a"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="tel::"
                android:textColor="#2b2a2a"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tt_needs_somebody_phone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="110110119"
                android:textColor="#2b2a2a"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tt_needs_somebody_accademycal"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="5dp"
                android:background="@drawable/text_shape"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="计科院"
                android:textColor="#ce1414"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_abc_image_eye"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@drawable/ic_abc_image_eye"/>

            <TextView
                android:id="@+id/tt_needs_somebody_checknumb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="200:"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_logo_download"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_abc_image_message"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@drawable/ic_abc_image_message"/>

            <TextView
                android:id="@+id/tt_needs_somebody_messagenumb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="200:"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_resource_logo_zan"
                android:layout_width="20dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@drawable/zan_selector"
                app:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tt_needs_somebody_zannumb"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="200:"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>