<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.swpuiot.yikao.view.activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:fitsSystemWindows="true"
            app:actualImageScaleType="centerInside"
            app:placeholderImage="@drawable/slide2"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_login"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            android:fitsSystemWindows="true"
            app:theme="@android:style/ThemeOverlay.Material.Dark"
            app:title=" "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tt_logoin"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tt_reset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="20sp"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_log_reset"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>
