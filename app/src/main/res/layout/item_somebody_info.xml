<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tt_nameofds"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="yangyang"
                        android:textColor="#2b2a2a"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:id="@+id/tt_date_Time"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:text="昨天11.12"
                        android:textColor="#9e9b9b"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tt_date_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="计科院皮皮学长"
                    android:textColor="#2b2a2a"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="绩点::"
                        android:textColor="#2b2a2a"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="36dp"/>

                    <TextView
                        android:id="@+id/tt_qqnumb"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:text="4.0:"
                        android:textColor="#2b2a2a"
                        android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="联系电话:"
                        android:textColor="#2b2a2a"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:id="@+id/tt_phonenumb"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:text="13025671589:"
                        android:textColor="#2b2a2a"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_somebody_dslogo"
                android:layout_width="64dp"
                android:layout_height="78dp"
                android:layout_weight="2"
                app:roundAsCircle="true"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="擅长学科:"
                android:textColor="#2b2a2a"
                android:textSize="15sp"/>

            <View
                android:layout_width="10dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/tt_goodat_course"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="高数,线性代数,概率统计,c语言,Java,"
                android:textColor="#2b2a2a"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/tt_somebody_numb_check"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="浏览200次"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_somebody_logo_criticise"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@drawable/ic_abc_image_message"/>

            <TextView
                android:id="@+id/tt_somebody_numb_criticise"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="200:"
                android:textSize="15sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_somebody_logo_zan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                app:actualImageScaleType="centerInside"
                app:placeholderImage="@drawable/zan_selector"/>

            <TextView
                android:id="@+id/tt_somebody_numb_zan"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="200:"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>